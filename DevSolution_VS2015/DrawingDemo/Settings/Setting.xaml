<UserControl x:Class="DrawingDemo.Settings.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawingDemo.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Width="200" Margin="0,50,50,10" Grid.Column="0" Grid.ColumnSpan="2">
            <ListBoxItem>Apperance</ListBoxItem>
            <ListBoxItem>About</ListBoxItem>
        </ListBox>

        <Rectangle Width="1" Grid.Column="1" Fill="Black"/>

        <local:ApperanceSetting Grid.Column="2"/>


    </Grid>
</UserControl>
